params {
    data_dir = 'data'
    outdir = "${data_dir}/output/dump_gw/"

    hic_file = "${data_dir}/ENCFF447ERX.txt.hic9"
    mcool_file = "${data_dir}/ENCFF447ERX.pairs.mcool"

    // replicates = 10
    // resolutions = [10, 100, 500, 1000, 5000, 10000, 25000, 50000, 100000, 250000, 500000, 1000000, 2500000]
    replicates = 2
    resolutions = [1000, 10000, 100000, 1000000]
}

process {
    // stageInMode = 'copy'

    container = 'ghcr.io/paulsengroup/2023-hictk-paper/hictk-bench:1.0.0'
    withName:cooler_dump {
        container = 'ghcr.io/paulsengroup/2023-hictk-paper/cooler-bench:1.0.0'
    }
}
