params {
    data_dir = 'data'
    outdir = "${data_dir}/output/hic2cool/"

    hic8_file = "${data_dir}/ENCFF447ERX.txt.hic8"
    hic9_file = "${data_dir}/ENCFF447ERX.txt.hic9"

    // replicates = 10
    // resolutions = [10, 100, 500, 1000, 5000, 10000, 25000, 50000, 100000, 250000, 500000, 1000000, 2500000]
    replicates = 2
    resolutions = [10000, 100000, 1000000]
}

process {
    stageInMode = 'copy'

    container = 'ghcr.io/paulsengroup/2023-hictk-paper/hictk-bench:1.0.0'
    withName:hic2cool {
        container = 'ghcr.io/paulsengroup/2023-hictk-paper/hic2cool:0.8.3'
    }
    withName:summarize {
        container = 'ghcr.io/paulsengroup/2023-hictk-paper/plotting:1.0.0'
    }
}
