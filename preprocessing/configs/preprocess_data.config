params {
    data_dir = 'data'

    pairs = "${data}/input/pairs/*.gz"
    assembly = 'hg38'
    chrom_sizes = "${data}/input/${assembly}/${assembly}.chrom.sizes"
    // resolutions = [10, 20, 50, 100, 200, 500, 1000, 2000, 5000, 10000, 25000, 50000, 100000, 250000, 500000, 1000000, 2500000]
    resolutions = [1000, 5000, 10000, 25000, 50000, 100000, 250000, 500000, 1000000, 2500000]
}

process {
    container = 'ghcr.io/paulsengroup/2023-hictk-paper/cooler:0.9.2'
    withName:pairs_to_cool {
        memory = 16.GB
    }

    withName:pairs_to_hic8 {
        container = 'ghcr.io/paulsengroup/2023-hictk-paper/juicer-tools:2.20.00'
        memory = 500.GB
    }
    withName:pairs_to_hic9 {
        container = 'ghcr.io/paulsengroup/2023-hictk-paper/hic-tools:3.30.00'
        memory = 500.GB
    }
}
